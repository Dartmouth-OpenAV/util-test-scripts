#!/bin/bash
PROJECTOR=c202-projector.thayer.dartmouth.edu
# PROJECTOR=e116-5-projector.thayer.dartmouth.edu
# PROJECTOR=e116-4-projector.thayer.dartmouth.edu

# PROJECTOR=m210-projector.thayer.dartmouth.edu
